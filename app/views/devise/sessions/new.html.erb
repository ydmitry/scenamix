<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {  :class => "form-horizontal" }) do |f| %>
  <fieldset>  
    <div id="legend">
      <legend class="">Sign in</legend>
    </div>    
    
    <div class="control-group">
      <label class="control-label" for="email"><%= f.label :email %></label>
      <div class="controls">
        <%= f.email_field :email, :tabindex => 1 %>
        <%- if devise_mapping.registerable? %>
          <span class="help-inline"><%= link_to "Sign up", new_registration_path(resource_name) %></span>
        <% end -%>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="password"><%= f.label :password %></label>
      <div class="controls">
        <%= f.password_field :password, :tabindex => 2 %>
        <%- if devise_mapping.recoverable? %>
          <span class="help-inline"><%= link_to "Forgot your password?", new_password_path(resource_name) %></span>
        <% end -%>
      </div>
    </div>
    
    <% if devise_mapping.rememberable? -%>
    <div class="control-group">
      
      <div class="controls"><label class="checkbox"><%= f.check_box :remember_me, :tabindex => 3 %> <%= f.label :remember_me %></label></div>
    </div>
    <% end -%>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Sign in", :tabindex => 4, :class => "btn btn-large btn-success" %>
        or 
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to image_tag('/assets/' + provider.to_s + '-sign-in.png', :border => 0), omniauth_authorize_path(resource_name, provider) %><br />
          <% end -%>
        <% end -%>
      </div>
    </div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>

