%script#response-alternative-item-template{:type => 'text/html'}
  <div class="response-alternative">
  <%= response %>
  <div class='response-votes-wrap'>
  <a class="icon-plus-sign response-weight" href="/scenes/<%= scene_id %>/responses/<%= id %>/upvote"></a>
  <span class="response-weight-value"><%= votes %></span>
  <a class="icon-minus-sign response-weight" href="/scenes/<%= scene_id %>/responses/<%= id %>/downvote"></a>
  </div>

  <div class="response-created-at"><%= created_at %></div>
  <div class="response-user-name"><%= user_name %></div>

  <div><a href='/scenes/<%= scene_id %>/responses/<%= id %>' class='response-alternative-switch'>Switch scenario</a></div>
  </div>

%script#response-item-template{:type => 'text/html'}
  <div>
  <div class="scenario-sequel-wrap"><a data-parent_id="<%= parent_id %>" data-scene_id="<%= scene_id %>" class="response-new-button" href="/scenes/<%= scene_id %>/responses/new?parent_id=<%= parent_id %>">New sequel of scenario</a></div>
  <div class="response" data-alt-url="/scenes/<%= scene_id %>/responses/<%= id %>/alternative">
  <%= response %>

  <div class='response-votes-wrap'>
  <a class="icon-plus-sign response-weight" href="/scenes/<%= scene_id %>/responses/<%= id %>/upvote"></a>
  <span class="response-weight-value"><%= votes %></span>
  <a class="icon-minus-sign response-weight" href="/scenes/<%= scene_id %>/responses/<%= id %>/downvote"></a>
  </div>

  <div class="response-created-at"><%= created_at %></div>
  <div class="response-user-name"><%= user_name %></div>


  <% if (!!alternative_size) { %>
  <div class="response-alternative-link-wrap"><a class="response-alternative-link" href="/scenes/<%= scene_id %>/responses/<%= id %>/alternative"><%= alternative_size %> alternative scenario(s)</a></div>
  <% } %>

  </div>
  </div>
  </div>

%script#responses-create-form-template{:type => 'text/html'}
  <form method="post" action="/scenes/<%= scene_id %>/responses" accept-charset="UTF-8" class="response-post-form">
  <input type="hidden" value="<%= parent_id %>" name="parent_id">
  <div class="control-group">
  <label for="response-textarea-<%= scene_id %>-<%= parent_id %>" class="control-label">Sequel of scenario</label>
  <div class="controls">
  <textarea placeholder="What do you imagine?" name="response" class="input-xxlarge" id="response-textarea-<%= scene_id %>-<%= parent_id %>"></textarea>
  </div>
  </div>
  <div>
  <input type="submit" value="Post" name="commit" class="btn btn-primary">
  </div>
  </form>

%script#responses-alternative-create-form-template{:type => 'text/html'}
  <form action='' method='post' accept-charset="UTF-8">
  <div class="control-group">
  <label for="alternative_response" class="control-label">Response</label>
  <div class="controls">
  <textarea placeholder="Do you have another image in your mind?" name="response[response]" id="alternative_response" class="input-xxlarge"></textarea>
  </div>
  </div>
  <input type="submit" value="Post alternative response" name="commit" class="btn btn-primary">
  </form>


%script#responses-alternative-template{:type => 'text/html'}
  <div id="responses-alternative-wrap">
  <h4>Alternative scenarios</h4>
  <div id="responses-alternative"></div>
  <div class="scenario-alternative-new-wrap"><a class="btn btn-info response-alternative-new-button" href="#">New alternative response</a></div>
  </div>


%script#responses-template{:type => 'text/html'}
  <div>
  <div id="scenario-current-responses">
  </div>
  <div class="scenario-sequel-wrap"><a data-scene_id="<%= scene_id %>" data-parent_id="<%= response_id %>" class="response-new-button" href="/scenes/<%= scene_id %>/responses/new?parent_id=<%= response_id %>">New sequel of scenario</a></div>
  <a class="btn btn-info scenario-prev" href="/scenes/<%= scene_id %>/responses/<%= response_id %>/prev">Previous scenario</a>
  <a class="btn btn-info scenario-next" href="/scenes/<%= scene_id %>/responses/<%= response_id %>/next">Next scenario</a>
  </div>
