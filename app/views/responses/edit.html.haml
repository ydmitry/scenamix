%h1 Edit Existing Response

= form_for [@response.scene, @response], :class => 'form-horizontal' do |f|

  .control-group
    = f.label :response
    .controls
      = f.text_area :response, :size => "60x4", :class => 'input-xxlarge'
      = @response.errors[:response].join(', ')

  .form-actions
    = f.submit 'Update response', :class => 'btn-custom'
