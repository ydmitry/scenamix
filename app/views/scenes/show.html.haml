-# in app/views/scenes/show.html.haml

%h2
  = @scene.title

.well.alert-success
  %p#description= @scene.description

= link_to 'Edit', edit_scene_path(@scene), :class => 'btn'
= button_to 'Delete', scene_path(@scene), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger'

- if !@responses.empty?
  %hr
  - @responses.each do |response|
    .well
      %p     
        = response.response
           
      = link_to 'Edit', edit_scene_response_path(:scene_id => response.scene_id, :id => response.id), :class => 'btn btn-mini'
      = button_to 'Delete', scene_response_path(:scene_id => response.scene_id, :id => response.id), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger'

%hr

= form_tag scene_responses_path(@scene) do
  .control-group
    = label :response, :response, 'Response', :class => 'control-label'
    .controls
      = text_area_tag 'response[response]', '', :class => 'input-xxlarge'
  .form-actions
    = submit_tag 'Post response to scene', :class => 'btn btn-primary'


= link_to 'Back to scene list', scenes_path


